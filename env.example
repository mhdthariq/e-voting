# Database Configuration
DATABASE_URL="file:./dev.db"
# For PostgreSQL: DATABASE_URL="postgresql://username:password@localhost:5432/blockvote"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-minimum-32-chars"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
JWT_ISSUER="blockvote"
JWT_AUDIENCE="blockvote-users"
BCRYPT_SALT_ROUNDS=12

# Email Configuration
EMAIL_SERVICE="gmail"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="BlockVote <noreply@blockvote.org>"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="BlockVote"
NODE_ENV="development"

# Blockchain Configuration
BLOCKCHAIN_DIFFICULTY=2
BLOCKCHAIN_STORAGE_PATH="./data/blockchain"
PROOF_OF_WORK_ENABLED=true

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
SESSION_SECRET="your-session-secret-change-this"

# Admin Account (First Setup)
ADMIN_USERNAME="admin"
ADMIN_EMAIL="admin@blockvote.org"
ADMIN_PASSWORD="admin123"

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="text/csv,application/vnd.ms-excel"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
